---
import Layout from "./Layout.astro";

export interface Props {
  title: string;
  description?: string;
  maxWidth?: "max-w-4xl" | "max-w-5xl" | "max-w-6xl" | "max-w-7xl";
}

const { title, description, maxWidth = "max-w-6xl" } = Astro.props;
---

<Layout title={title} description={description}>
  <main class={`container mx-auto px-4 py-8 ${maxWidth}`}>
    <slot />
  </main>
</Layout>
